# Scrollback
defscrollback 5000

# If a window goes unresponsive, don't block the whole session waiting for it
nonblock on

# Turn off visual bell
vbell off

# Autodetach screen 
autodetach on

# Magic status bar
hardstatus on
defmonitor on
activity ''
startup_message off
termcapinfo xterm*|rxvt* 'ti@:te@:vb@'
caption always '%{=  g}%?%-Lw%?%{r}(%{w}%n*%f %t%?(%u)%?%{r})%{g}%?%+Lw%?%?%= [ %{B}%Y-%m-%d %{W}%c %{g}]'
